<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Shipping Form</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="form-container">
    <h2>Shipping Form</h2>
    <form action="/submit" method="POST" id="infoForm">
      
      <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" name="address" id="address" required value="<%= address %>" />
      </div>

      <!-- <div class="form-group">
        <label for="pickup">Pickup Location:</label>
        <input type="text" name="pickup" id="pickup" required />
      </div> -->

      <div class="form-group">
        <label for="pincode">Pincode:</label>
        <input type="text" name="pincode" id="pincode" pattern="[0-9]{6}" required value="<%= pincode %>" />
      </div>

      <div class="form-group">
        <label for="variant">Product Variant:</label>
        <select name="variant" id="variant" required>
          <option value="">-- Select Variant --</option>
          <% productvariant.forEach(function(variant) { %>
            <option value="<%= variant %>"><%= variant %></option>
          <% }); %>
        </select>
      </div>

      <button type="submit">Submit</button>
    </form>
  </div>
</body>
</html>
